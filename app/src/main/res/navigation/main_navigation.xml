<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.yuenov.kotlin.open.fragment.MainFragment"
        android:label="MainFragment">

    </fragment>

    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.yuenov.kotlin.open.fragment.DetailFragment"
        android:label="DetailFragment">

        <action
            android:id="@+id/action_detail_to_detail"
            app:destination="@id/detail_fragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_left_out"
            app:popEnterAnim="@anim/slide_left_in"
            app:popExitAnim="@anim/slide_right_out"/>

        <action
            android:id="@+id/action_detail_to_chapter_list"
            app:destination="@id/chapter_list_fragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_left_out"
            app:popEnterAnim="@anim/slide_left_in"
            app:popExitAnim="@anim/slide_right_out"/>

        <action
            android:id="@+id/action_detail_to_recommend"
            app:destination="@id/recommend_fragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_left_out"
            app:popEnterAnim="@anim/slide_left_in"
            app:popExitAnim="@anim/slide_right_out"/>

    </fragment>

    <action
        android:id="@+id/action_to_detail"
        app:destination="@id/detail_fragment"
        app:enterAnim="@anim/slide_right_in"
        app:exitAnim="@anim/slide_left_out"
        app:popEnterAnim="@anim/slide_left_in"
        app:popExitAnim="@anim/slide_right_out"/>

